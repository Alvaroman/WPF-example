<Window x:Class="ReserRoom.Views.UdemyViews.StyleCustomization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReserRoom.Views.UdemyViews"
        mc:Ignorable="d"
        Title="StyleCustomization" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Border" x:Key="PaggingTest">
            <Setter Property="BorderBrush" Value="blue"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="Background">
            <Setter Property="Background" Value="AntiqueWhite"></Setter>
            <Setter Property="BorderBrush" Value="DarkOrange"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="Background2">
            <Setter Property="Background" Value="AntiqueWhite"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <SolidColorBrush x:Key="defaultBackground" Color="Gray"></SolidColorBrush>
    </Window.Resources>
